doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel='icon', href='/img/favicon.png', type='image/x-icon')
    title HodlInfo
    link(href="/style.css", rel="stylesheet")
    link(href="/query.css", rel="stylesheet")
    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin="")
    link(href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap", rel="stylesheet")
  body
    header.main-header
      div.logo-container
        h1.main-logo HODLINFO
      div.options-container
        select
          option.option INR
        select
          option BTC
          option ETH
          option USDT
          option XRP
          option TRX
          option DASH
          option ZEC
          option XEM
          option IOST
          option WIN
          option BIT
          option WRX
        button.buy-btc-button Buy BTC
      div.connect-container
        div.timer
        button Connect Telegram
        button On

    div
      h1.quote Best Price to Trade

    div.analysis
      p
        span 3.1%
        | 5 Mins
      p
        span 1.1%
        | 1 Hour
      h1.special-data Rs 11,01,030
      p
        span 2.1%
        | 1 Day
      p
        span 0.03%
        | 7 Days

    div
      h1.quote-small Average BTC/INR net price including commission

    table
      thead
        tr
          th #
          th Platform
          th Last Traded Price
          th Buy / Sell Price
          th Difference
          th Savings
      tbody
        each s,index in stocks
          tr
            td #{index+1}
            td
              .name-img-container 
                img(src=`/img/company/com-${index+1}.jpg`)
                p= s.name
            td ₹#{s.last}
            td= `₹${s.buy} / ₹${s.sell}`
            - var difference = s.sell - s.buy; 
            - var savings = (difference / parseFloat(s.buy)) * 100;

            td(class="curr-diff") #{difference.toFixed(2)}%  
            td(class="curr-diff") #{savings.toFixed(2)}%
        //- tr
        //-   td 1
        //-   td Wazirx
        //-   td 37,40,500
        //-   td 37,40,500 / 40,50,730
        //-   td -0.70%
        //-   td 64,499

    div.footer
      p copyright &copy;
        span Hodlinfo
      p Support
    script(src="/js/bundle.js")